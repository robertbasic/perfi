{% extends 'default-layout.html.twig' %}

{% block avanzu_page_title %}List of accounts{% endblock %}
{% block avanzu_page_subtitle %}All the accounts that are created{% endblock %}

{% block avanzu_page_content %}
<div class='row'>
    <div class='col-sm-12'>
        <div class='box box-primary'>
            <div class='box-body'>
                <table id="accounts-table" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts_inline %}
<script>
$(document).ready(function() {
    $('#accounts-table').DataTable({
        "ajax": "{{ path('accounts_list') }}",
        "columns": [
            { "data": "accountId" },
        ]
    });
} );
</script>
{% endblock %}
