<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="PerFi\PerFiBundle\Repository\TransactionRepository" name="PerFi\PerFiBundle\Entity\Transaction">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="transactionId" type="guid" column="transaction_id" unique="true"/>
    <field name="type" type="string" column="type" length="255"/>
    <field name="sourceAccount" type="guid" column="source_account"/>
    <field name="destinationAccount" type="guid" column="destination_account"/>
    <field name="amount" type="integer" column="amount"/>
    <field name="currency" type="string" column="currency" length="3"/>
    <field name="date" type="datetime" column="date"/>
    <field name="recordDate" type="datetime" column="record_date"/>
    <field name="description" type="string" column="description" length="255"/>
    <field name="refunded" type="boolean" column="refunded"/>
  </entity>
</doctrine-mapping>
